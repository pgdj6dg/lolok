-- SPEEDS TROLL HUB v3 (Ultimate Mobile Cheat)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "ğŸ’€ SPEEDS TROLL HUB v3",
    LoadingTitle = "Loading Ultimate Troll Tools...",
    LoadingSubtitle = "God Mode + Inf Jump + NoClip + More",
    ConfigurationSaving = { Enabled = true, FileName = "SPEEDS_TROLL" },
    KeySystem = false,
})

-- Main Tab
local MainTab = Window:CreateTab("Hacks", 4483362458)

-- ğŸ”¥ SPEED CONTROL (Slider + Input)
local SpeedValue = 16
MainTab:CreateSlider({
    Name = "Speed Slider",
    Range = {16, 500},
    Increment = 1,
    Suffix = "studs/s",
    CurrentValue = 16,
    Callback = function(Value)
        SpeedValue = Value
        if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
        end
    end
})

MainTab:CreateInput({
    Name = "Custom Speed",
    PlaceholderText = "Enter Speed (16-500)",
    RemoveTextAfterFocusLost = false,
    Callback = function(Text)
        local num = tonumber(Text)
        if num and num >= 16 and num <= 500 then
            SpeedValue = num
            if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
                game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = num
            end
            Rayfield:Notify("Speed Updated", "Set to " .. num .. " studs/s", 3)
        else
            Rayfield:Notify("Error", "Must be between 16-500!", 3)
        end
    end
})

-- âœˆï¸ FLY MODE (Mobile-Friendly)
local Flying = false
MainTab:CreateToggle({
    Name = "Fly Mode (Press Space/Click)",
    CurrentValue = false,
    Callback = function(Value)
        Flying = Value
        loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyGuiV3/main/FlyGuiV3.txt"))()
    end
})

-- ğŸ‘‘ GOD MODE (Invincibility)
MainTab:CreateToggle({
    Name = "God Mode (Unkillable)",
    CurrentValue = false,
    Callback = function(Value)
        if game.Players.LocalPlayer.Character then
            local Humanoid = game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
            if Humanoid then
                Humanoid.MaxHealth = Value and math.huge or 100
                Humanoid.Health = Value and math.huge or 100
            end
        end
    end
})

-- ğŸ¦˜ INFINITE JUMP
local InfiniteJumpEnabled = false
MainTab:CreateToggle({
    Name = "Infinite Jump",
    CurrentValue = false,
    Callback = function(Value)
        InfiniteJumpEnabled = Value
        game:GetService("UserInputService").JumpRequest:Connect(function()
            if InfiniteJumpEnabled then
                game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
            end
        end)
    end
})

-- ğŸšª NO CLIP (Walk Through Walls)
local NoClipEnabled = false
MainTab:CreateToggle({
    Name = "NoClip (Walk Through Walls)",
    CurrentValue = false,
    Callback = function(Value)
        NoClipEnabled = Value
        if game.Players.LocalPlayer.Character then
            for _, part in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.CanCollide = not Value
                end
            end
        end
    end
})

-- ğŸ‘€ ESP (Highlight Enemies)
MainTab:CreateToggle({
    Name = "ESP (See Players)",
    CurrentValue = false,
    Callback = function(Value)
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer then
                if Value then
                    local highlight = Instance.new("Highlight")
                    highlight.Parent = player.Character or player.CharacterAdded:Wait()
                    highlight.FillColor = Color3.fromRGB(255, 0, 0)
                    highlight.OutlineColor = Color3.fromRGB(255, 255, 0)
                else
                    if player.Character then
                        local highlight = player.Character:FindFirstChild("Highlight")
                        if highlight then highlight:Destroy() end
                    end
                end
            end
        end
    end
})

-- ğŸ¨ CUSTOM CHAT TITLE + COLOR
MainTab:CreateInput({
    Name = "Custom Chat Title",
    PlaceholderText = "Enter Chat Title",
    RemoveTextAfterFocusLost = false,
    Callback = function(Text)
        if Text ~= "" then
            game.Players.LocalPlayer.DisplayName = Text
            Rayfield:Notify("Chat Title Updated", "Now: " .. Text, 3)
        end
    end
})

local ChatColor = Color3.fromRGB(255, 0, 0)
MainTab:CreateColorPicker({
    Name = "Chat Color Picker",
    Color = Color3.fromRGB(255, 0, 0),
    Callback = function(Value)
        ChatColor = Value
        if game.Players.LocalPlayer.Character then
            local Humanoid = game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
            if Humanoid then
                Humanoid.NameDisplayDistance = 20
                Humanoid.NameOcclusion = "NoOcclusion"
                Humanoid.NameColor3 = Value
            end
        end
    end
})

-- ğŸ’€ KILL ALL (Except You)
MainTab:CreateButton({
    Name = "Kill Everyone (But You)",
    Callback = function()
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer and player.Character then
                player.Character:BreakJoints()
            end
        end
        Rayfield:Notify("Annihilation Complete", "Everyone is dead. ğŸ˜ˆ", 5)
    end
})

-- ğŸšª KICK ALL (Except You + Taunt)
MainTab:CreateButton({
    Name = "Kick Everyone (LOL)",
    Callback = function()
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer then
                game:GetService("TeleportService"):Teleport(game.PlaceId, player)
                task.wait(0.2)
            end
        end
        Rayfield:Notify("Server Wiped", "I kicked u out lol ğŸ˜‚", 5)
    end
})

-- ğŸ”„ AUTO-REAPPLY ON RESPAWN
game.Players.LocalPlayer.CharacterAdded:Connect(function(character)
    character:WaitForChild("Humanoid")
    
    -- Reapply Speed
    if SpeedValue ~= 16 then
        character.Humanoid.WalkSpeed = SpeedValue
    end
    
    -- Reapply Fly
    if Flying then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyGuiV3/main/FlyGuiV3.txt"))()
    end
    
    -- Reapply God Mode
    if game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
        character.Humanoid.MaxHealth = math.huge
        character.Humanoid.Health = math.huge
    end
    
    -- Reapply Chat Color
    if ChatColor then
        character.Humanoid.NameColor3 = ChatColor
    end
end)

Rayfield:Notify("SPEEDS TROLL HUB v3", "Successfully Loaded!", 5)
