    end
})

-- ðŸ‘‘ GOD MODE (Triple Protection)
Window:CreateToggle({
    Name = "God Mode (Unkillable)",
    CurrentValue = false,
    Callback = function(Value)
        if LocalPlayer.Character then
            local humanoid = LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                -- Method 1: Health lock
                humanoid.MaxHealth = Value and math.huge or 100
                humanoid.Health = Value and math.huge or 100
                
                -- Method 2: State manipulation
                humanoid:SetStateEnabled(Enum.HumanoidStateType.Dead, not Value)
                
                -- Method 3: Damage hook
                if Value then
                    humanoid.Touched:Connect(function() end)
                end
            end
        end
    end
})

-- ðŸ”„ AUTO-PROTECTION
