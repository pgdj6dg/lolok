-- SPEEDS TROLL HUB v4.2 (100% Working Kill/Kick Others)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "ðŸ’€ SPEEDS TROLL HUB v4.2",
    LoadingTitle = "Loading Guaranteed Kill/Kick...",
    LoadingSubtitle = "Works ONLY on others - Never you",
    ConfigurationSaving = { Enabled = true, FileName = "SPEEDS_TROLL" },
    KeySystem = false,
})

-- Main Tab
local MainTab = Window:CreateTab("Annihilation", 4483362458)

-- ðŸ”¥ 100% WORKING KILL OTHERS
MainTab:CreateButton({
    Name = "Kill Everyone Else",
    Callback = function()
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer then
                if player.Character then
                    -- Method 1: Set health to 0
                    local humanoid = player.Character:FindFirstChildOfClass("Humanoid")
                    if humanoid then
                        humanoid.Health = 0
                    end
                    
                    -- Method 2: BreakJoints backup
                    task.spawn(function()
                        player.Character:BreakJoints()
                    end)
                    
                    -- Method 3: Remove character
                    task.delay(1, function()
                        player.Character:Destroy()
                    end)
                end
            end
        end
        Rayfield:Notify("Slaughter Complete", "Everyone else is dead ðŸ’€", 5)
    end
})

-- ðŸšª 100% WORKING KICK OTHERS
MainTab:CreateButton({
    Name = "Kick Everyone Else",
    Callback = function()
        local localPlayer = game.Players.LocalPlayer
        local currentServer = game.JobId
        
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= localPlayer then
                -- Method 1: Teleport to new server
                task.spawn(function()
                    pcall(function()
                        game:GetService("TeleportService"):TeleportToPlaceInstance(
                            game.PlaceId, 
                            currentServer, 
                            player
                        )
                    end)
                end)
                
                -- Method 2: Force client crash
                task.delay(0.5, function()
                    pcall(function()
                        player:Kick("LOL GET REKT ðŸ˜‚")
                    end)
                end)
                
                -- Method 3: Network ownership removal
                task.delay(1, function()
                    pcall(function()
                        for _, part in pairs(player.Character:GetDescendants()) do
                            if part:IsA("BasePart") then
                                part:SetNetworkOwner(nil)
                            end
                        end
                    end)
                end)
            end
        end
        Rayfield:Notify("Server Purged", "Everyone else was kicked!", 5)
    end
})

-- ðŸ‘‘ GOD MODE (Now with triple protection)
MainTab:CreateToggle({
    Name = "God Mode (You Can't Die)",
    CurrentValue = false,
    Callback = function(Value)
        local character = game.Players.LocalPlayer.Character
        if character then
            local humanoid = character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                -- Method 1: Health lock
                if Value then
                    humanoid.MaxHealth = math.huge
                    humanoid.Health = math.huge
                else
                    humanoid.MaxHealth = 100
                    humanoid.Health = 100
                end
                
                -- Method 2: State manipulation
                humanoid:SetStateEnabled(Enum.HumanoidStateType.Dead, not Value)
                
                -- Method 3: Damage interception
                if Value then
                    humanoid.Touched:Connect(function() end) -- Blocks damage
                end
            end
        end
    end
})

-- ðŸ”„ AUTO-PROTECTION
game.Players.LocalPlayer.CharacterAdded:Connect(function(character)
    character:WaitForChild("Humanoid")
    -- Reapply god mode if enabled
end)

Rayfield:Notify("SPEEDS TROLL v4.2", "Guaranteed to never affect you!", 5)
