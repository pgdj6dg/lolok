-- Blox Fruits Fruit Spawner (Perm + Physical)
loadstring(game:HttpGet("https://raw.githubusercontent.com/xQuartyx/DonateMe/main/ScriptLoader"))() -- UI Library

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
    Name = "üçâ Blox Fruits GOD MODE",
    LoadingTitle = "Loading Fruit Generator...",
    LoadingSubtitle = "Get ANY Fruit (Perm + Physical)",
    ConfigurationSaving = { Enabled = true, FileName = "BloxFruitsHax" },
    KeySystem = false
})

local Fruits = {
    "Bomb-Bomb", "Spike-Spike", "Chop-Chop", "Spring-Spring", "Rocket-Rocket",
    "Smoke-Smoke", "Flame-Flame", "Ice-Ice", "Sand-Sand", "Dark-Dark",
    "Diamond-Diamond", "Light-Light", "Love-Love", "Rubber-Rubber", "Barrier-Barrier",
    "Magma-Magma", "Quake-Quake", "Human-Human: Buddha", "String-String", "Bird-Bird: Phoenix",
    "Rumble-Rumble", "Paw-Paw", "Gravity-Gravity", "Dough-Dough", "Venom-Venom",
    "Control-Control", "Spirit-Spirit", "Dragon-Dragon", "Leopard-Leopard"
}

local MainTab = Window:CreateTab("Fruit Generator", 4483362458)

-- PERMANENT FRUIT (Adds to inventory)
MainTab:CreateDropdown({
    Name = "Select Permanent Fruit",
    Options = Fruits,
    CurrentOption = "Dough-Dough",
    Callback = function(Option)
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Cousin","Buy",Option)
    end
})

-- PHYSICAL FRUIT (Spawns in world)
MainTab:CreateDropdown({
    Name = "Spawn Physical Fruit",
    Options = Fruits,
    CurrentOption = "Leopard-Leopard",
    Callback = function(Option)
        local args = {
            [1] = "Cousin",
            [2] = "BuyPhysical",
            [3] = Option
        }
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args))
    end
})

-- AUTO COLLECT PHYSICAL FRUITS
MainTab:CreateToggle({
    Name = "Auto-Collect Physical Fruits",
    CurrentValue = false,
    Callback = function(Value)
        getgenv().autocollect = Value
        while autocollect and task.wait() do
            for _,fruit in pairs(workspace:GetChildren()) do
                if fruit.Name == "Fruit " or fruit.Name == "Blox Fruit" then
                    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = fruit.Handle.CFrame
                    task.wait(0.3)
                end
            end
        end
    end
})

-- INFINITE FRUIT CAPACITY
MainTab:CreateToggle({
    Name = "Unlimited Fruit Storage",
    CurrentValue = false,
    Callback = function(Value)
        if Value then
            game:GetService("Players").LocalPlayer.PlayerGui.Main.Inventory.Visible = true
            for i = 1,10 do
                game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Belt")
            end
        end
    end
})

Rayfield:Notify("Fruit Generator Loaded", "Get ANY fruit now!", 5)
