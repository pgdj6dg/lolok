-- Blox Fruits Ultimate HUB (Gamepasses + Fruits + Levels/Money)
loadstring(game:HttpGet("https://raw.githubusercontent.com/xQuartyx/DonateMe/main/ScriptLoader"))()

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
    Name = "üçí Blox Fruits GOD MODE",
    LoadingTitle = "Loading Ultimate Cheats...",
    LoadingSubtitle = "Fruits + Gamepasses + Stats",
    ConfigurationSaving = { Enabled = true, FileName = "BloxUltimate" },
    KeySystem = false
})

-- FRUIT SYSTEM
local Fruits = {
    "Bomb", "Spike", "Chop", "Spring", "Rocket", "Smoke", 
    "Flame", "Ice", "Sand", "Dark", "Diamond", "Light", 
    "Love", "Rubber", "Barrier", "Magma", "Quake", "Buddha", 
    "String", "Phoenix", "Rumble", "Paw", "Gravity", "Dough", 
    "Venom", "Control", "Spirit", "Dragon", "Leopard"
}

-- GAMEPASSES
local Gamepasses = {
    "2x Money", "2x Beli", "Fast Boats", "Hellfire Torch",
    "Race V2", "Dough King", "Gacha Discount", "Dark Blade"
}

local MainTab = Window:CreateTab("Main", 4483362458)

-- FRUIT SPAWNER (FIXED)
MainTab:CreateDropdown({
    Name = "Get Any Fruit",
    Options = Fruits,
    CurrentOption = "Leopard",
    Callback = function(Option)
        local args = {[1] = "Cousin", [2] = "Buy", [3] = Option}
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args))
        
        -- Physical spawn backup
        task.spawn(function()
            local args2 = {[1] = "Cousin", [2] = "BuyPhysical", [3] = Option}
            game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args2))
        end)
    end
})

-- GAMEPASS UNLOCKER
MainTab:CreateDropdown({
    Name = "Unlock Gamepasses",
    Options = Gamepasses,
    CurrentOption = "Dark Blade",
    Callback = function(Option)
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("PurchaseRaw", Option)
    end
})

-- STAT EDITOR
MainTab:CreateSlider({
    Name = "Set Level",
    Range = {1, 2550},
    Increment = 1,
    Suffix = "Level",
    CurrentValue = 1,
    Callback = function(Value)
        game:GetService("Players").LocalPlayer.Data.Level.Value = Value
    end
})

MainTab:CreateInput({
    Name = "Set Money",
    PlaceholderText = "Enter amount",
    RemoveTextAfterFocusLost = false,
    Callback = function(Text)
        local amount = tonumber(Text)
        if amount then
            game:GetService("Players").LocalPlayer.Data.Beli.Value = amount
        end
    end
})

-- AUTO FARM
MainTab:CreateToggle({
    Name = "Auto-Farm Levels",
    CurrentValue = false,
    Callback = function(Value)
        getgenv().autofarm = Value
        while autofarm and task.wait() do
            pcall(function()
                local plr = game.Players.LocalPlayer
                local target = workspace.Enemies:FindFirstChildOfClass("Model")
                if target and target:FindFirstChild("HumanoidRootPart") then
                    plr.Character.HumanoidRootPart.CFrame = target.HumanoidRootPart.CFrame
                    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Attack", "Normal")
                end
            end)
        end
    end
})

Rayfield:Notify("Ultimate HUB Loaded", "Fruits + Gamepasses + Stats activated!", 5)
